<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40sp"
    tools:context=".CreateAccount">

    <LinearLayout
        android:id="@+id/TopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImagemUser"
            android:layout_width="167dp"
            android:layout_height="160dp"
            android:paddingTop="10sp"
            app:srcCompat="@drawable/account_vector" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth_bold"
            android:paddingTop="10sp"
            android:text="Adicione seus dados!"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth_bold"
            android:paddingBottom="30sp"
            android:text="Faça Login com os dados do HiveMQ Cloud" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/BodyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TopLayout"
        android:layout_marginStart="0sp"
        android:layout_marginTop="35sp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/URL_LAYOUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TLS_MQTT_URL"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/cloud_vector"
                android:drawablePadding="10sp"
                android:fontFamily="@font/amaranth"
                android:hint="TLS MQTT URL"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Username_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Username"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/user_vector"
                android:drawablePadding="10sp"
                android:fontFamily="@font/amaranth"
                android:hint="Username"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Password_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            app:endIconMode="password_toggle"
            app:passwordToggleDrawable="@drawable/hide_eye">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PasswordInput"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/password_vector"
                android:drawablePadding="10sp"
                android:fontFamily="@font/amaranth"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/BottomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/BodyLayout"
        android:layout_marginTop="50sp"
        android:gravity="center|top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/TestConectionButton"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/DarkGray"
            android:text="Testar Conexão"
            android:textColor="@color/grey11" />

        <Button
            android:id="@+id/ButtonConnect"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/RedButton"
            android:text="Entrar"
            android:textColor="@color/grey11" />

    </LinearLayout>

</RelativeLayout>